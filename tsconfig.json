{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "declaration": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "**/*test*",
    "dist",
    "eslint-plugin-react-style"
  ]
}
